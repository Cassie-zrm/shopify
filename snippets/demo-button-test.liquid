{% schema %}
  {
    "name": "Custom Button",
    "settings": [
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Click Me"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button Color",
        "default": "#007bff"
      },
      {
        "type": "color",
        "id": "button_hover_color",
        "label": "Button Hover Color",
        "default": "#0056b3"
      },
      {
        "type": "number",
        "id": "button_padding_top",
        "label": "Button Padding Top (px)",
        "default": 10
      },
      {
        "type": "number",
        "id": "button_padding_bottom",
        "label": "Button Padding Bottom (px)",
        "default": 10
      },
      {
        "type": "number",
        "id": "button_padding_left",
        "label": "Button Padding Left (px)",
        "default": 20
      },
      {
        "type": "number",
        "id": "button_padding_right",
        "label": "Button Padding Right (px)",
        "default": 20
      }
    ],
    "presets": [
      {
        "name": "Default",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  
  test
  {% comment %} <div style="padding: {{ settings.button_padding_top }}px {{ settings.button_padding_right }}px {{ settings.button_padding_bottom }}px {{ settings.button_padding_left }}px;">
    <button 
      style="
        background-color: {{ settings.button_color }};
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        padding: 10px 20px; /* Adjust if needed */
      "
      onmouseover="this.style.backgroundColor='{{ settings.button_hover_color }}';"
      onmouseout="this.style.backgroundColor='{{ settings.button_color }}';"
    >
      {{ settings.button_text }}
    </button>
  </div>
   {% endcomment %}